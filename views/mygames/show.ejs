<% include ../partials/header %>


<div class="container">
	<div class="jumbotron justify-content-center">
		<div class="card mb-5 text-center">
			<table class="table-borderless ">
				<tr class="justify-content-center" style="color:#101073">
					<th>WHITE :</th>
					<td><%= game.whitePlayer %></td>
					<th>BLACK :</th>
					<td><%= game.blackPlayer %></td>
				</tr>
				<tr></tr>
				<tr class="text-center">
					<th colspan="4" class="">RESULT : <%= game.resultW %>-<%= game.resultB %></th>
				</tr>
			</table>
		</div>
		
		
		
		
		<div class="row justify-content-center align-content-center">
			<div class="col-md-4">
				<a class="btn btn-warning btn-sm btn-block" href="/mygames/<%= game._id %>/edit" role="button">EDIT GAME</a>
			</div>
			<div class="col-md-4">
				<form class="deleteForm" action="/mygames/<%= game._id %>?_method=DELETE" method="POST">
					<button style="width:100%" class="btn btn-danger">Delete Game</button>
				</form>
			</div>
			<div class="col-md-4">
				<a class="btn btn-outline-primary btn-sm btn-block float-md-left" href="/mygames" role="button">BACK</a>
			</div>
		</div>
	</div>
	
	
	
	
	<table class="table table-striped table-dark table-borderless">
	  <thead>
		<tr>
		  <th class="text-center" scope="col">#</th>
		  <th class="text-center" scope="col">White</th>
		  <th class="text-center" scope="col">Black</th>
		  <th class="text-center" scope="col">Comments</th>
		</tr>
	  </thead>
	  <tbody>
		<% for(var i=0;(game.movesW[i]!="")||(game.movesB[i]!=""); i++){ %>
			<tr>
			 <th class="text-center" scope="row"><%= i+1 %></th>
			 <td class="text-center"><%= game.movesW[i] %></td>
			 <td class="text-center"><%= game.movesB[i] %></td>
			 <td class="text-center"><%= game.comment[i] %></td>
			</tr>
		<% } %>
	  </tbody>
	</table>
</div>

<% include ../partials/footer %>